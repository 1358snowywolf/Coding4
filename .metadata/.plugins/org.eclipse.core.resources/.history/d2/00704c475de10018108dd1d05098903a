#include <bits/stdc++.h>

using namespace std;

int main() {
	string parenthesis;
	cin >> parenthesis;

	int middle = parenthesis.size() / 2;
	int left = 0;
	int right = 0;

	for(int i = 0; i <= middle; i++){
		if(parenthesis[i] == ')'){
			left++;
		}
	}

	for(int i = middle + 1; i < (int) parenthesis.size(); i++){
		if(parenthesis[i] == '('){
			right++;
		}
	}

	cout << right + left << endl;


	return 0;
}
